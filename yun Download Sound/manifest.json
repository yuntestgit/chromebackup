{
	"manifest_version":2,
	
	"name":"yun Download Notify",
	"version":"17.2.15.5",
	"description":"Plays a sound or utters a text using speech synthesis when a download is completed.",
	
	"icons":
	{
		"512":"icons/icon.png"
	},

	"permissions":
	[
		"downloads",
		"storage"
	],
	
	"background":
	{
		"scripts":
		[
			"background.js"
		]
	},
	  
	"options_ui":
	{
		"page":"options/options.html",
		"chrome_style":true  
	},	  

	"browser_action":
	{
		"default_icon":"icons/icon.png",
		"default_popup":"options/options.html",
		"default_title":"yun Download Notify"
	}
}